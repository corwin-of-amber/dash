
if [ "$1" == "clean" ]; then
  rm -f src/*.o src/*/*.o
fi

INC='-I../stubs -include ../stubs/etc.h -I../../gnu/libedit/src'
LIB='-L../../gnu/libedit/src/.libs'

make -C src AM_DEFAULT_VERBOSITY=1 CC=/opt/wasi-sdk/bin/clang\
    CFLAGS="-DDEBUG=1 -fblocks $INC"   \
    LDFLAGS="-Wl,-allow-undefined -Wl,--import-table $LIB" EXEEXT=.wasm
