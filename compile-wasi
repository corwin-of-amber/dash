
if [ "$1" == "clean" ]; then
  rm -f src/*.o src/*/*.o
fi

INC='-I../wasi -include ../wasi/etc.h -I../../gnu/libedit/src'
LIBS=../../gnu/libedit/src/.libs/libedit.wa

make -C src AM_DEFAULT_VERBOSITY=1 CC=/opt/wasi-sdk/bin/clang\
    CFLAGS="-O3 -DDEBUG=1 -fblocks $INC"   \
    LDFLAGS="-Wl,-allow-undefined -Wl,--import-table" LIBS="$LIBS" EXEEXT=.wasm
